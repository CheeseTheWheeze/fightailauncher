<Window x:Class="FightingOverlay.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fighting Overlay" Height="700" Width="1000">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Video" FontWeight="Bold" />
            <DockPanel>
                <TextBox x:Name="VideoPathTextBox" MinWidth="500" Margin="0,0,8,0" />
                <Button Content="Browse" Click="OnBrowseVideo" Width="100" />
            </DockPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,12" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Athlete Profile" FontWeight="Bold" />
                <ComboBox x:Name="ProfileComboBox" Width="300" />
            </StackPanel>
            <Button Content="New Profile" Margin="12,20,0,0" Click="OnNewProfile" />
            <Button Content="Analyze" Margin="12,20,0,0" Click="OnAnalyze" />
            <TextBlock x:Name="VersionText" Margin="12,24,0,0" />
            <Button x:Name="UpdateButton" Content="Update" Margin="12,20,0,0" Click="OnUpdate" />
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                <TextBlock Text="Progress" FontWeight="Bold" />
                <TextBox x:Name="LogTextBox" Height="400" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Overlay Preview" FontWeight="Bold" />
                <MediaElement x:Name="PreviewPlayer" Height="400" LoadedBehavior="Manual" UnloadedBehavior="Stop" />
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,12,0,0">
            <Button x:Name="OpenOutputButton" Content="Open Output Folder" Click="OnOpenOutput" Margin="0,0,12,0" IsEnabled="False" />
            <Button Content="Open Logs" Click="OnOpenLogs" />
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Vertical" Margin="0,12,0,0">
            <TextBlock Text="Diagnostics" FontWeight="Bold" />
            <TextBlock x:Name="AppVersionText" />
            <TextBlock x:Name="BaseDirText" TextWrapping="Wrap" />
            <TextBlock x:Name="InstalledDirText" TextWrapping="Wrap" />
            <TextBlock x:Name="LatestVersionText" TextWrapping="Wrap" />
            <TextBlock x:Name="EnginePathText" TextWrapping="Wrap" />
            <TextBlock x:Name="OutputDirText" TextWrapping="Wrap" />
            <TextBlock x:Name="EngineVersionText" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
